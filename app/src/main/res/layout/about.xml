<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kae_background1"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/aboutText"
        android:layout_width="234dp"
        android:layout_height="490dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="104dp"
        android:layout_marginTop="36dp"
        android:text="Die Kaapse Afrikaanse Eisteddfod is die oudste Afrikaanse eisteddfod in Suid-Afrika en is die eerste keer in 1927 aangebied.\n\nDie Kaapse Afrikaanse Eisteddfod bied 'n platform vir leerders om hul kreatiwiteit te ontwikkel en hul talente te wys aan 'n breër gehoor.\n\nDie eisteddfod sluit kategorieë in soos koor, orkes, solo-sang, voordrag, toneel, poësie, prosa en beeldende kuns."
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView75" />

    <TextView
        android:id="@+id/textView75"
        android:layout_width="92dp"
        android:layout_height="38dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="131dp"
        android:textStyle="bold"
        android:text="ABOUT"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAboutBackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" /> <!-- Set your own back button icon -->
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_alignParentEnd="true"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="16dp"
    android:contentDescription="Back" />
</androidx.constraintlayout.widget.ConstraintLayout>
